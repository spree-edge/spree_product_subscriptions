<% if @subscription.paused? && !@subscription.cancelled? %>
  <%= button_link_to Spree.t(:activate), "javascript:void(0)", class: "ajax_handler btn #{ btn_class } btn-success", data: { method: "PATCH", url: unpause_subscription_path(@subscription), confirmation: Spree.t("subscriptions.confirm.activate"), turbo: "false" } %>
<% elsif !@subscription.cancelled? && !@subscription.paused? %>
  <%= button_link_to Spree.t(:pause), "javascript:void(0)", class: "ajax_handler btn #{ btn_class } btn-warning", data: { method: "PATCH", url: pause_subscription_path(@subscription), confirmation: Spree.t("subscriptions.confirm.pause"), turbo: "false" } %>
<% end %>
