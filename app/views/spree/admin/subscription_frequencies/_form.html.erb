<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @subscription_frequency } %>

<%= f.field_container :title, class: ['form-group'] do %>
  <%= f.label :title, raw(Spree.t(:title) + required_span_tag) %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.error_message_on :title %>
<% end %>
<%= f.field_container :months_count, class: ['form-group'] do %>
  <%= f.label :months_count %>
  <%= number_field :subscription_frequency, :months_count, min: 1, value: @subscription_frequency.months_count || 1, class: 'form-control' %>
  <%= f.error_message_on :months_count %>
<% end %>
